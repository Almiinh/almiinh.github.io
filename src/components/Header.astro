---
import HeaderLink from "./HeaderLink.astro";
import References from "./References.astro";
import DarkModeSwitch from "./DarkModeSwitch.svelte";

let { class: className } = Astro.props;
---

<header class={className}>
    <DarkModeSwitch class="DarkModeSwitch" client:load />
    <nav>
        <a href="/"><h1>Minh-Hoang's portfolio</h1></a>
        <div class="internal-links">
            <HeaderLink href="/">Home</HeaderLink>
            <HeaderLink href="/news">News</HeaderLink>
            <HeaderLink href="/about">About</HeaderLink>
        </div>
        <References />
    </nav>
</header>

<style>
    header {
        box-shadow: 0 2px 4px var(--color-shadow);
        display: grid;
        grid-template-columns: max(15vw, 36px) auto max(15vw, 36px);
    }
    :global(.DarkModeSwitch) {
        grid-row: 1;
        grid-column: 1;
    }
    h1 {
        margin-top: 0;
    }
    nav {
        display: flex;
        align-items: center;
        justify-content: space-between;
    }
    nav a {
        text-decoration: none;
        color: var(--color-text);
    }
    nav a.active {
        text-decoration: none;
        border-bottom-color: var(--color-text);
    }
    .internal-links a {
        padding: 1em 0.5em;
        border-bottom: 4px solid transparent;
    }
</style>
