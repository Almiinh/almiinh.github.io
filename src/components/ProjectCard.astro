---
import Tags from "./Tags.astro";
import "fs";
const { project } = Astro.props;
---

<a href={project.href} class="card" target="_blank">
    <div class="content">
        {project.title && <div class="title">{project.title}</div>}
        {project.image && <img src={project.image} alt={project.title}/>}
        {project.desc && <div class="desc">{project.desc}</div>}
    </div>
    <div class="bar">
        <Tags tags={project.tags} />
        {
            project.href && (
                <svg
                    class="___1okpztj f1w7gpdv fez10in fg4l7m0 f16hsg94 fwpfdsa f88nxoq f1e2fz10"
                    fill="currentColor"
                    aria-hidden="true"
                    width="1.5em"
                    height="1.5em"
                    viewBox="0 0 20 20"
                    xmlns="http://www.w3.org/2000/svg"
                >
                    <path
                        d="M6 4a2 2 0 0 0-2 2v8c0 1.1.9 2 2 2h8a2 2 0 0 0 2-2v-2.5a.5.5 0 0 1 1 0V14a3 3 0 0 1-3 3H6a3 3 0 0 1-3-3V6a3 3 0 0 1 3-3h2.5a.5.5 0 0 1 0 1H6Zm5-.5c0-.28.22-.5.5-.5h5c.28 0 .5.22.5.5v5a.5.5 0 0 1-1 0V4.7l-4.15 4.15a.5.5 0 0 1-.7-.7L15.29 4H11.5a.5.5 0 0 1-.5-.5Z"
                        fill="currentColor"
                    />
                </svg>
            )
        }
    </div>
</a>

<style>
    .card {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        break-inside: avoid;
        margin-bottom: 1rem;
        box-shadow: 0 0 10px var(--color-shadow);
        background-color: var(--color-bg);
        padding: 1rem;
        text-decoration: none;

        &:hover {
            transform: translateY(2px);
        }
        .content {
            display: flex;
            flex-direction: column;
        }
        img {
            margin: 1em 0;
            object-fit: cover;
        }
        .title {
            color: var(--color-text);
            font-weight: bolder;
            font-size: large;
        }
        .desc {
            color: var(--color-text-secondary);
            font-size: small;
        }
        .bar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin: 1rem 0 0 0;
            width: 100%;
            color: var(--color-text)    
        }
        .bar svg {
            flex-shrink: 0;
        }
    }
</style>
