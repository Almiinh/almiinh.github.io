<script>
    function moveTooltipAtPointer(event: MouseEvent) {
        const link = (event.target as HTMLElement).closest(".link");
        if (link !== null) {
            const tooltip = link.querySelector(".tooltip") as HTMLElement;
            if (tooltip !== null && tooltip.matches(".tooltip")) {
                tooltip.style.left = event.pageX + "px";
                tooltip.style.top = event.pageY + "px";
            }
        }
    }

    function showTooltip(event: Event) {
        document.querySelectorAll(".link .tooltip").forEach((t) => t.classList.remove("visible"));
        const link = (event.target as HTMLElement).closest(".link")!;
        const tooltip = link.querySelector(".tooltip")!;
        tooltip.classList.add("visible");
        setTimeout(() => {
            tooltip.classList.remove("visible");
        }, 5000);
    }

    function onclick(event: Event) {
        if ((event.target as HTMLElement).matches(".link, .link a, .link a *")) {
            if ((event.target as HTMLElement).matches(".link a, .link a *")) {
                event.preventDefault();
            }
            showTooltip(event);
        }
    }

    function ondblclick(event: Event) {
        if ((event.target as HTMLElement).matches(".link a, .link a *")) {
            const a = (event.target as HTMLElement).closest("a")!;
            window.location.href = a.href;
        }
    }

    if (!window.matchMedia("(hover: none), (pointer: coarse)").matches) {
        document.body.addEventListener("mousemove", moveTooltipAtPointer);
    } else {
        document.body.addEventListener("click", onclick);
        document.body.addEventListener("dblclick", ondblclick);
    }
</script>

