        </nav>
        <p>
            CS Major @ Mines Saint-Ã‰tienne, FR<br />
            Intern @ Thales Research & Technologies, Palaiseau, Paris-Saclay, FR<br />
        </p>
    </Banner>
    <main>
        {
            projects.map(({ heading, projects }) => (
                <section>
                    <h2>{heading}</h2>
                    <div class="links">
                        {projects.map((project) => (
                            <a href={project.href} class="card">
                                <div>
                                    {project.title && <div class="title">{project.title}</div>}
                                    {project.tooltip && <div class="tooltip">{project.tooltip}</div>}
                                </div>
                                <div class="bar">
                                    <div class="tags">
                                        {project.tags &&
                                            project.tags.map((tag) => (
                                                <span
                                                    class="tag"
                                                    style={{
                                                        backgroundColor: tag.backgroundColor,
                                                        color: tag.color,
                                                    }}
                                                >
                                                    {tag.name}
                                                </span>
                                            ))}
                                    </div>
                                    {project.href &&
                                    (
                                        <svg
                                            class="___1okpztj f1w7gpdv fez10in fg4l7m0 f16hsg94 fwpfdsa f88nxoq f1e2fz10"
                                            fill="currentColor"
                                            aria-hidden="true"
                                            width="1.5em"
                                            height="1.5em"
                                            viewBox="0 0 20 20"
                                            xmlns="http://www.w3.org/2000/svg"
