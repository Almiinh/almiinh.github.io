---
import Layout from "../layouts/Layout.astro";
import { projects } from "./projectsData";
import ProjectCard from "../components/ProjectCard.astro";
import Tags from "../components/Tags.astro";
---

<Layout>
    <h2>Minh-Hoang Alexis HUYNH</h2>
    
    <em>
        <div style="display: flex; align-items: center; gap: 0.5rem;">
            <Tags tags={[{ name: "Currently" }]} />
            <span><em>System V&V Engineer @ Alstom, Saint-Ouen, FR</em></span>
        </div>
        LLM Agent Developer Intern @ Thales Research & Technologies, Palaiseau, FR<br />
        CS Major @ Mines Saint-Ã‰tienne, FR<br />
    </em>
    
    <br />
    <p>
        Welcome to my personal portfolio website! Here, I showcase a selection of my projects, mostly from
        school, ranging from web applications to machine learning and computer vision.
    </p>
    <br />
    <p>Feel free to explore!</p>
    {
        projects.map(({ heading, projects }) => (
            <section>
                <h2>{heading}</h2>
                <div class="links">
                    {projects.map((project) => (
                        <ProjectCard {project} />
                    ))}
                </div>
            </section>
        ))
    }
    <br />
</Layout>

<style>
    .links {
        margin: 1rem 0;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(30%, 1fr));
        grid-auto-flow: row dense;
        gap: 1rem;
    }
    @media (width < 600px) {
        .links {
            grid-template-columns: repeat(1, 1fr);
        }
    }
    @media (600px < width < 1000px) {
        .links {
            grid-template-columns: repeat(2, 1fr);
        }
    }
</style>
