---
import Layout from "../layouts/Layout.astro";
import DataCommonsLine from "../components/DataCommonsLine.svelte";
---

<Layout>
    <section>
        <h2>Data Dashboard</h2>
        <DataCommonsLine client:load />
    </section>
</Layout>

<style>
    datacommons-line {
        margin-bottom: 1rem;
    }
    datacommons-line::part(header),
    datacommons-line::part(y-axis-text),
    datacommons-line::part(x-axis-text),
    datacommons-line::part(y-axis-label),
    datacommons-line::part(y-axis-text),
    datacommons-line::part(x-axis-label) {
        fill: var(--color-text);
        color: var(--color-text);
    }
</style>
