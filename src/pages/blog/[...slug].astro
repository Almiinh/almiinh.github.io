---
import { type CollectionEntry, getCollection, render } from "astro:content";
import BlogPost from "$layouts/BlogPost.astro";

export async function getStaticPaths() {
    const posts = await getCollection("blog");
    return posts.map((post) => ({
        params: { slug: post.id },
        props: post,
    }));
}
type Props = CollectionEntry<"blog">;

const post = Astro.props;
const { Content } = await render(post);
---

<script>
    const callouts = document.querySelectorAll("[data-callout]");
    callouts.forEach((callout) => {
        const emoji = callout.getAttribute("data-callout-type");
        const title = callout.querySelector("[data-callout-title]");
        if (emoji === title?.textContent?.trim()) {
            // Remove title if it's the same as emoji
            title.remove();
        }
    });
</script>

<BlogPost {...post.data}>
    <Content />
</BlogPost>